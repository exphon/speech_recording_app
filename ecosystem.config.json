{
  "apps": [
    {
      "name": "speech-recording-app",
      "cwd": "/var/www/app/speech_recording_app",
      "script": "npm",
      "args": "start",
      "env": {
        "PORT": "3000",
        "HTTPS": "false",
        "HOST": "localhost",
        "NODE_ENV": "development"
      },
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "error_file": "/var/www/app/speech_recording_app/logs/pm2-error.log",
      "out_file": "/var/www/app/speech_recording_app/logs/pm2-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true
    }
  ]
}
